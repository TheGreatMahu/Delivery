<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.delivery.controllers.DeliveryDashboardController"
            prefWidth="700" prefHeight="450">

    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label fx:id="welcomeLabel" text="Welcome, Delivery Man"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="8">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Assigned Orders"/>
            <TableView fx:id="orderTable" prefHeight="350">
                <columns>
                    <TableColumn fx:id="colOrderId" text="Order ID" prefWidth="80"/>
                    <TableColumn fx:id="colOrderCustId" text="Customer ID" prefWidth="100"/>
                    <TableColumn fx:id="colOrderStatus" text="Status" prefWidth="150"/>
                    <TableColumn fx:id="colOrderAmount" text="Amount" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Out for Delivery" onAction="#onMarkOutForDelivery"/>
            <Button text="Delivered" onAction="#onMarkDelivered"/>
        </HBox>
    </bottom>
</BorderPane>