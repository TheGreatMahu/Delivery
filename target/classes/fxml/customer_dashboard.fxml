<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.delivery.controllers.CustomerDashboardController"
            prefWidth="700" prefHeight="450">

    <top>
        <HBox spacing="10">
        <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
            <Label fx:id="welcomeLabel" text="Welcome, Customer"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="8">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
            <Label text="Available Products"/>
            <TableView fx:id="productTable" prefHeight="350">
                <columns>
                    <TableColumn fx:id="colProdId" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="colProdTitle" text="Title" prefWidth="150"/>
                    <TableColumn fx:id="colProdDesc" text="Description" prefWidth="200"/>
                    <TableColumn fx:id="colProdPrice" text="Price" prefWidth="80"/>
                    <TableColumn fx:id="colProdStock" text="Stock" prefWidth="80"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
<padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
            <Button text="Place Order (1 qty)" onAction="#onPlaceOrder"/>
        </HBox>
    </bottom>
</BorderPane>
