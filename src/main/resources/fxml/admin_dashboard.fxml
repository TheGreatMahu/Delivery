<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.delivery.controllers.AdminDashboardController"
            prefWidth="900" prefHeight="550">

    <!-- ðŸ”µ TOP BAR WITH TITLE AND LOGOUT BUTTON -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Admin Dashboard" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#onLogout" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 8 16;"/>
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.5">
            <items>

                <!-- ðŸ”¹ Product Management -->
                <VBox spacing="10">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>

                    <Label text="Product Management" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                    <GridPane hgap="8" vgap="8">
                        <columnConstraints>
                            <ColumnConstraints minWidth="80" prefWidth="80"/>
                            <ColumnConstraints minWidth="200" prefWidth="200"/>
                        </columnConstraints>
                        <children>
                            <Label text="Title:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <TextField fx:id="titleField" promptText="Enter product title" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                            <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <TextField fx:id="descriptionField" promptText="Enter description" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                            <Label text="Price:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <TextField fx:id="priceField" promptText="0.00" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                            <Label text="Stock:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                            <TextField fx:id="stockField" promptText="0" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                        </children>
                    </GridPane>

                    <HBox spacing="8">
                        <Button text="Add Product" onAction="#onAddProduct" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                        <Button text="Update" onAction="#onUpdateProduct" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                        <Button text="Delete" onAction="#onDeleteProduct" style="-fx-background-color: #FF5722; -fx-text-fill: white;"/>
                    </HBox>

                    <Label text="Product List" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <TableView fx:id="productTable" onMouseClicked="#onProductTableClicked" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colProdId" text="ID" prefWidth="40"/>
                            <TableColumn fx:id="colProdTitle" text="Title" prefWidth="100"/>
                            <TableColumn fx:id="colProdDesc" text="Description" prefWidth="130"/>
                            <TableColumn fx:id="colProdPrice" text="Price" prefWidth="70"/>
                            <TableColumn fx:id="colProdStock" text="Stock" prefWidth="60"/>
                        </columns>
                        <placeholder>
                            <Label text="No products available"/>
                        </placeholder>
                    </TableView>
                </VBox>

                <!-- ðŸ”¹ Order Management -->
                <VBox spacing="10">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>

                    <Label text="Order Management" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                    <TableView fx:id="orderTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colOrderId" text="Order ID" prefWidth="80"/>
                            <TableColumn fx:id="colOrderCustId" text="Customer ID" prefWidth="100"/>
                            <TableColumn fx:id="colOrderStatus" text="Status" prefWidth="120"/>
                            <TableColumn fx:id="colOrderAmount" text="Amount" prefWidth="100"/>
                        </columns>
                        <placeholder>
                            <Label text="No orders available"/>
                        </placeholder>
                    </TableView>

                    <Label text="Order Actions" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <VBox spacing="8">
                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="Assign to:" minWidth="70"/>
                            <ComboBox fx:id="deliveryManComboBox" prefWidth="200" promptText="Select delivery man"/>
                            <Button text="Assign" onAction="#onAssignDeliveryMan" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                        </HBox>
                        <HBox spacing="8">
                            <Button text="Mark as Delivered" onAction="#onMarkDelivered" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 8 16;"/>
                        </HBox>
                    </VBox>
                </VBox>

            </items>
        </SplitPane>
    </center>

</BorderPane>