<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.delivery.controllers.LoginController"
            prefWidth="420" prefHeight="320"
            style="-fx-background-color: white;">
    <children>
        <VBox spacing="12" alignment="CENTER"
              AnchorPane.topAnchor="20"
              AnchorPane.leftAnchor="30"
              AnchorPane.rightAnchor="30"
              AnchorPane.bottomAnchor="20">

            <Label text="Online Delivery System">
                <font>
                    <Font size="20" name="Arial Bold"/>
                </font>
            </Label>

            <Label text="Login as Admin / Customer / Delivery Man"
                   style="-fx-text-fill: #555;"/>

            <GridPane hgap="10" vgap="10">
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" minWidth="80"/>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>
    
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>

    <children>
                    <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Role:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="roleComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                </children>
            </GridPane>

            <Button text="Login" onAction="#onLoginClicked" maxWidth="Infinity"/>

        </VBox>
    </children>
</AnchorPane>
